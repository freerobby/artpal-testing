/*
Theme: Steira
RTL: Yoav Farhi, yoav@automattic.com
*/

/* @group body */

body {
	direction:rtl;
	unicode-bidi:embed;
	font: 13px/20px "Tahoma", Verdana, sans-serif;
}

/* @end */

/* @group anchor */

a {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @end */

/* @group strong */

strong {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @end */

/* @group em */

em {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
	font-style: italic;
}

/* @end */

/* @group header */

h1,
h2,
h3,
h4,
h5,
h6 {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @group h4 */

h4 a.permlink {
	float: left;
	padding-right: 20px;
	padding-left:0;
}

/* @end */

/* @group haslink */


h2.haslink a span.new {
	float: right;
	margin: 7px 0 0 10px;
}

h2.haslink a span.posted {
	float: left;
	margin-right: 20px;
	margin-left: 0;
}

h2.haslink a span.more,
#sidebar h3 span.more a {
	float: left;
	padding-right: 20px;
	padding-left:0;
}

/* @end */

/* @end */

/* @end */

/* @group blockquote */

blockquote p {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @end */

/* @group quote */

span.quote {
	font-family: Georgia, serif;
}

/* @end */

/* @group form */

/* @group select */

select {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @group submit */

input.submit {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @end */

/* @group text */

input.text,
textarea {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @end */

/* @end */

/* @group small */

small {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @end */

/* @end */

/* @group wrapper */

#wrapper {
	background-position: 390px 0 ;
}

/* @end */


/* @group masthead */

#masthead h1 {
	float: right;
}

/* @group navigation */

#navigation {
	float: left;
}

#navigation li {
	float: right;
}

#navigation li.current_page_item {
	background: url(img/navigation-current.gif) no-repeat center 57px;
}

#navigation li a {
	float: right;
}

/* @end */

/* @end */

/* @group subhead */

/* @group search */

#subhead form {
	left: 0;
	right:auto;
} 

#subhead form label {
	right: 0;
	left:auto;
}

#subhead form input.text {
	right: 10px;
	left:auto;
}

#subhead form input.submit {
	left: 10px;
	right:auto;
	background-position: 100% 0;
}

/* @end */

/* @end */

/* @group content */

#content {
	float: right;
}

#content .contentblock legend {
	font-family:"Arial Narrow","Helvetica Neue",sans-serif;
}

#content .contentblock input {
	font-family:"Arial Narrow","Helvetica Neue",sans-serif;
}

#content #searchform input.submit {
	background-position: 100% 0;
	right: 10px;
	left:auto;
}


/* @group table */

#content .contentblock table tr th {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

#content .contentblock table tr th,
#content .contentblock table tr td {
	text-align: right;
}

#calendar_wrap table caption,
#calendar_wrap table thead {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
	padding: 5px 0 10px 5px;
	text-align: right;
}

#calendar_wrap table td {
	padding: 5px 0 5px 36px;
}

#calendar_wrap table tr td#next {
	text-align: left;
}

/* @end */

/* @group ol */

#content .contentblock ol {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

#content .contentblock ol li {
	padding: 0 0 0 20px;
	margin-right: 30px;
	margin-left: 0;
}
/* @end */

/* @group ul */

#content .contentblock ul {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

#content .contentblock ul li {
	padding: 0 25px 0 20px;
	background: url(img/li.gif) no-repeat 0 8px;
}

/* @end */

/* @end */

/* @group sidebar */

#sidebar {
	float: left;
}

.widget form input,
.widget textarea {
	font-family:"Arial Narrow","Helvetica Neue",sans-serif;
}

/* @group about */

.aboutshort {
	background: url(img/about-rtl.gif) no-repeat left bottom;
}

/* @end */

/* @end */

/* @group footer */

#footer {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

#footer p#credits {
	padding-left: 0;
	padding-right:20px;
}

#footer p#generator {
	float: left;
	padding-right: 0;
	padding-left:20px;
}

/* @end */

/* @group categoriesgrid */

#sidebar #categoriesgrid {
	padding-left: 0;
	padding-right: 20px;
}

#categoriesgrid {
	float: right;
}

#sidebar #categoriesgrid li {
	float: right;
	margin: 0 0 0 10px;
}

#categoriesgrid li a {
	float: right;
}

/* @end */

/* @group postdetails */

.postdetails {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

.postdetails li.comments {
	float: left;
}

.postdetails li.comments a {
	padding-right: 20px;
	padding-left:0;
}

/* @end */


/* @group olderposts */

#olderposts {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @end */

/* @group indexlist */

.indexlist {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
	text-align: left;
}

.indexlist li {
	background: url(img/line-dotted.gif) repeat-x 0 13px;
}

.indexlist li a span.name {
	float: right;
	padding: 0 0 0 5px;
}

.indexlist li a span.title {
	padding-right: 5px;
	padding-left:0;
}

/* @group recentpostslist */

#steira-recent-posts.indexlist {
	text-align: right;
}

#steira-recent-posts.indexlist li a span.title {
	padding-left: 5px;
	padding-right: 0;
}

#steira-recent-posts.indexlist li a span.date {
	float: left;
	padding-right: 5px;
	padding-left:0;
}

/* @end */

/* @end */

/* @group intro */

#intro {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @end */

/* @group image */

#content .contentblock .image p {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @end */

/* @group comments */

/* @group commentform */

#commentform p.buttons {
	padding: 0 80px 0 0;
}

#commentform p.buttons input.submit {
	background-image: url(img/comment-submit.gif);
	background-position: 100% 0;
}

#commentform input.text,
#commentform textarea {
	font-family: "Lucida Grande", Verdana, sans-serif;
}

#commentform label.for-text {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
	margin-left: 10px;
	margin-right:0;
	text-align: left;
	float: right;
}

#commentform label small {
	left: 0;
	right:auto;
	text-align: right;
}

/* @end */

.comment h4,
.comment p {
	padding-right: 60px;
	padding-left:0;
}

.comment h4 img {
	right: 20px;
	left:auto;
}

.children .comment {
	padding: 5px 20px 5px 0;
}

/* @end */

/* @group navigation */

.nav-previous {
	float: right;
}
.nav-next {
	float: left;
	text-align:left;
}

/* @end */


/* @group contact-form */

.contact-form label {
	float:right;
	font-family:"Arial Narrow","Helvetica Neue",sans-serif;
	text-align:left;
}

.contact-form input.textbox,
form.contact-form textarea {
	font-family:"Lucida Grande",Verdana,sans-serif;
	float: left;
}

.contact-submit input {
	float: left;
}

.contact-submit span {
	float: left;
	margin: 15px 10px 0 0;
}

body #content form.contact-form input.pushbutton-wide {
	font-family: "Arial Narrow", "Helvetica Neue", sans-serif;
}

/* @end */